# 🪟 Configuración para Windows - Laravel Backend

# Configuración de aplicación
APP_NAME="Mecánica Asistida"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8001

# Configuración de idioma
APP_LOCALE=es
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=es_ES

# Configuración de base de datos - Compatible con XAMPP/Laragon
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=mecanica_db
DB_USERNAME=root
DB_PASSWORD=

# Configuración de sesión
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Configuración de cache
CACHE_DRIVER=file
QUEUE_CONNECTION=sync

# Configuración de email (para desarrollo)
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@mecanica-asistida.com"
MAIL_FROM_NAME="${APP_NAME}"

# Sanctum - Configuración para desarrollo local
SANCTUM_STATEFUL_DOMAINS=localhost:3000,127.0.0.1:3000

# CORS - Permitir frontend local
FRONTEND_URL=http://localhost:3000

# Configuración de logs
LOG_CHANNEL=stack
LOG_STACK=single
LOG_LEVEL=debug
